{
   "compilerOptions": {
     "target": "ESNext",
     "module": "ESNext",
     "moduleResolution": "Node",
     "types": ["node"],
     "strict": true,
     "allowJs": true,
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "resolveJsonModule": true,
     "skipLibCheck": true,
     "baseUrl": "./",
      "paths": {
         "@/*": ["src/*"]
      }
   },
   "include": ["src", "vite.config.ts"]
 }

